{
    "name": "dragon-code/which-color",
    "description": "A simple helper, helping to determine what color the text will look better over a monotonous color.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "which color",
        "color",
        "text-color",
        "dragon-code",
        "dragon",
        "andrey-helldar"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro",
            "homepage": "https://dragon-code.pro"
        }
    ],
    "support": {
        "issues": "https://github.com/TheDragonCode/which-color/issues",
        "source": "https://github.com/TheDragonCode/which-color"
    },
    "funding": [
        {
            "type": "boosty",
            "url": "https://boosty.to/dragon-code"
        },
        {
            "type": "yoomoney",
            "url": "https://yoomoney.ru/to/410012608840929"
        }
    ],
    "require": {
        "php": "^8.2",
        "dragon-code/support": "^6.0"
    },
    "require-dev": {
        "dragon-code/codestyler": "^6.2",
        "phpunit/phpunit": "^11.0 || ^12.0",
        "symfony/var-dumper": "^7.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DragonCode\\WhichColor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "laravel/pint": true,
            "symfony/thanks": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-update-cmd": [
            "vendor/bin/codestyle pint 8.2",
            "vendor/bin/codestyle editorconfig",
            "composer normalize"
        ],
        "style": "vendor/bin/pint"
    }
}
